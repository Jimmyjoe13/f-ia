    imprimer("âœ… Extraction RÃ‰ELLE terminÃ©e pour:", url_info["domaine"])
    imprimer("ğŸ“„ Taille HTML rÃ©cupÃ©rÃ©e:", donnees_seo["taille_html"], "caractÃ¨res")
