# Analyse du titre
fonction analyser_title(title) {
    soit score = 0
    soit problemes = []
    soit recommandations = []
    
    soit longueur_title = longueur(title)
    
    # VÃ©rifications du titre
    si (title == "Titre non trouvÃ©") {
        ajouter(problemes, "Aucun titre trouvÃ©")
        score = 0
    } sinon {
        si (longueur_title >= 30 et longueur_title <= 60) {
            score += 40
        } sinon si (longueur_title < 30) {
            ajouter(problemes, "Titre trop court")
            ajouter(recommandations, "Allongez le titre (30-60 caractÃ¨res)")
            score += 20
        } sinon {
            ajouter(problemes, "Titre trop long")
            ajouter(recommandations, "Raccourcissez le titre (30-60 caractÃ¨res)")
            score += 20
        }
        
        # VÃ©rifier la prÃ©sence de mots-clÃ©s importants
        si (texte.contient_texte(minuscule(title), "seo") ou texte.contient_texte(minuscule(title), "web")) {
            score += 30
        } sinon {
            ajouter(recommandations, "Ajoutez des mots-clÃ©s pertinents dans le titre")
        }
        
        # VÃ©rifier l'unicitÃ© et la description
        si (longueur_title > 10) {
            score += 30
        }
    }
    
    retourner {
        "score": score,
        "longueur": longueur_title,
        "problemes": problemes,
        "recommandations": recommandations,
        "contenu": title
    }
}

